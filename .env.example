# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_BASE_URL=https://api.anthropic.com

# Rate Limiting (Claude API limits)
CLAUDE_RPM=50
CLAUDE_INPUT_TPM=30000
CLAUDE_OUTPUT_TPM=8000

# Database Configuration (usando puertos alternativos)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=claude_infinito
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=claude_password_change_this

# ChromaDB Configuration (puerto alternativo)
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMA_AUTH_TOKEN=claude-infinito-secret-key-change-this

# Ollama Configuration (Local LLM for embeddings)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=nomic-embed-text

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=development
LOG_LEVEL=debug

# Security
JWT_SECRET=your-jwt-secret-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Application Settings
MAX_MEMORY_CONTEXTS=50
MAX_CONVERSATION_LENGTH=100
AUTO_CLEANUP_DAYS=365
ENABLE_ANALYTICS=true

# Development Settings
HOT_RELOAD=true
DEBUG_RAG=true
MOCK_CLAUDE_API=false
